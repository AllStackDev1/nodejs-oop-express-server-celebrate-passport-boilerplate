{
  "name": "nodejs-express-server-with-passport-celebrate-boilerplate",
  "version": "1.0.0",
  "description": "A nodejs, express server app, with passport auth integration and celebrate middleware validator boilerplate",
  "main": "app.js",
  "author": "Chinedu Ekene Okpala",
  "license": "MIT",
  "private": true,
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "dev:win32": "set DEBUG=app,app:* && set NDOE_ENV=DEV && nodemon -r pino-debug src/app.js",
    "dev": "DEBUG=app,app:* NODE_ENV=DEV nodemon -r pino-debug src/app.js",
    "start": "NODE_ENV=PROD pm2 start src/app.js",
    "docker-build": "docker build -t server_app:0.1 .",
    "docker-run": "docker run -p 81:8000 --env-file .env server_app:0.1",
    "test": "nyc --all ---reporter=html --reporter=text --check-coverage --lines 70 mocha -ui tdd --timeout 40000 ./src/tests/**/*test.js --file ./src/tests/tear-down.js --exit",
    "lint": "eslint --fix . --ignore-path .eslintignore",
    "docs": "./node_modules/.bin/jsdoc -c jsdoc.json"
  },
  "dependencies": {
    "async": "^3.2.0",
    "aws-sdk": "^2.889.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "celebrate": "^14.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "email-templates": "^8.0.4",
    "eventemitter3": "^4.0.7",
    "express": "^4.17.1",
    "express-handlebars": "^5.3.0",
    "fs-extra": "^9.1.0",
    "helmet": "^4.5.0",
    "hilary": "^5.2.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "mongoose": "^5.12.5",
    "mongoose-autopopulate": "^0.13.0",
    "multer": "^1.4.2",
    "multer-s3": "^2.9.0",
    "node-fetch": "^2.6.1",
    "nodemailer": "^6.5.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "query-string": "^7.0.0",
    "randomatic": "^3.1.1",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "debug": "^4.3.1",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-config-prettier-standard": "^4.0.1",
    "eslint-plugin-json": "^2.1.2",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-standard": "^5.0.0",
    "jsdoc": "^3.6.6",
    "log4js": "^6.3.0",
    "mocha": "^8.3.2",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "pino-debug": "^2.0.0",
    "prettier": "^2.2.1",
    "standard": "^16.0.3",
    "standardjs": "^1.0.0-alpha",
    "supertest": "^6.1.3"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "node_modules/**/node_modules",
      "tests/**/*.js"
    ],
    "delay": "2500"
  },
  "nyc": {
    "exclude": [
      "src/**/index.js",
      "docs",
      "build",
      "coverage",
      "src/tests",
      "src/app.js"
    ]
  },
  "standard": {
    "env": {
      "mocha": true
    }
  }
}
